{
  "name": "improved-party-app",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run dev",
    "web": "npm --workspace frontend run web",
    "ios": "npm --workspace frontend run ios",
    "android": "npm --workspace frontend run android",
    "build:web": "npm --workspace frontend run build:web",
    "lint": "npm --workspace frontend run lint",
    "typecheck:frontend": "npm --workspace frontend run lint",
    "typecheck:backend": "npm --workspace backend run typecheck"
  }
}
